{% extends "base.html.twig" %}

{% block title %}
{{status_code}} - {{status_text}}
{% endblock title %}

{% block body %}

<div class=" p-10 my-8 flex flex-col items-center justify-center gap-4 rounded-lg shadow-lg h-[calc(100vh-140px)]">
    <div class="alert alert-error lg:h-75 md:h-100 flex flex-col items-center justify-center px-5 py-10">

        {% if status_code == 404 %}

        <h1 class="text-9xl font-extrabold text-gray-800">{{status_code}}</h1>

        <div class="text-5xl my-4 ">&#128543;</div>

        <p class="text-center text-white text-3xl">The page you are looking for does not exist</p>

        {% endif %}

        {% if status_code == 403 %}

        <h1 class="text-9xl font-extrabold text-gray-800">{{status_code}}</h1>

        <div class="text-5xl my-4">&#128545;</div>

        <p class="text-center text-white text-3xl">You are not allowed here</p>

        {% endif %}

        {% if status_code == 500 %}

        <h1 class="text-9xl font-extrabold text-gray-800">{{status_code}}</h1>

        <div class="text-5xl my-4">&#128545;</div> 

        <p class="text-center text-white text-3xl">There has been a Server Error</p>

        {% endif %}
    </div>

    <a href="{{ path('app.home') }}" class="mt-4 btn lg:btn-sm sm:btn-lg btn-soft btn-primary">Back to Home</a>
</div>

{% endblock body %}